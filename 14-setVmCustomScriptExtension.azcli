az vm extension set --resource-group poc-east-rg --vm-name lnx9 --name customScript --publisher Microsoft.Azure.Extensions --settings '{"fileUris":["https://raw.githubusercontent.com/autocloudarc/0027-azure-cli-scriptlets/master/13-setupNginx.sh"],"commandToExecute":"./setupNginx.sh"}'
# done
# end of scriptlet